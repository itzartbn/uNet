<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_color_background">

    <EditText
        android:id="@+id/task_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="128dp"
        android:hint="Task Title"
        android:textColorHint="@color/white"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:background="@drawable/pp_border"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/task_duration"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Date and Time / Deadline"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pp_border"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/task_title"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:clickable="true" />

    <EditText
        android:id="@+id/task_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Description"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:background="@drawable/pp_border"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/task_duration"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:clickable="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/send_task_button"
        style="@android:style/Widget.Button"
        android:background="@drawable/btn_baclground"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/task_description"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Send Task"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />

</RelativeLayout>
