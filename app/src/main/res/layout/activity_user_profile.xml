<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity"
    android:background="@drawable/login_background"
    >
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">


         <androidx.appcompat.widget.Toolbar
             android:id="@+id/toolbar"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
             android:elevation="4dp"
             android:background="@color/white"
             app:titleMarginStart="0dp"
             app:titleMarginEnd="0dp"
             android:gravity="center"/>

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="300dp"
             android:background="#F4DFC8">

             <ImageView
                 android:layout_width="150dp"
                 android:layout_height="150dp"
                 android:id="@+id/profileDp"
                 android:layout_centerInParent="true"
                 android:background="@drawable/default_dp"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/showWelcome"
                 android:layout_below="@+id/profileDp"
                 android:hint="Loading..."
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="5dp"
                 android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                 android:textColor="@color/white"
                 />
         </RelativeLayout>




         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="15dp"
             android:layout_margin="15dp"
             android:background="@color/white"
             >
             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:id="@+id/ic_profile"
                 android:background="@drawable/dp_icon"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/profile_fullName"
                 android:layout_alignStart="@+id/ic_profile"
                 android:hint="Loading"
                 android:layout_marginStart="50dp"
                 android:textSize="18sp"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/profile_fullName"
                 android:background="@android:color/darker_gray"
                 android:id="@+id/divider_line"/>

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:id="@+id/ic_email"
                 android:background="@drawable/ic_email"
                 android:layout_below="@id/divider_line"
                 android:layout_marginTop="20dp"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/profile_email"
                 android:layout_alignStart="@+id/ic_email"
                 android:hint="Loading"
                 android:layout_marginStart="50dp"
                 android:textSize="18sp"
                 android:layout_below="@+id/divider_line"
                 android:layout_marginTop="20dp"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/profile_email"
                 android:background="@android:color/darker_gray"
                 android:id="@+id/divider_line2"/>

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:id="@+id/ic_sid"
                 android:background="@drawable/id_icon"
                 android:layout_below="@id/divider_line2"
                 android:layout_marginTop="20dp"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/profile_sid"
                 android:layout_alignStart="@+id/ic_sid"
                 android:hint="Loading"
                 android:layout_marginStart="50dp"
                 android:textSize="18sp"
                 android:layout_below="@+id/divider_line2"
                 android:layout_marginTop="20dp"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/profile_sid"
                 android:background="@android:color/darker_gray"
                 android:id="@+id/divider_line3"/>

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:id="@+id/ic_program"
                 android:background="@drawable/program_icon"
                 android:layout_below="@id/divider_line3"
                 android:layout_marginTop="20dp"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/profile_program"
                 android:layout_alignStart="@+id/ic_program"
                 android:hint="Loading"
                 android:layout_marginStart="50dp"
                 android:textSize="18sp"
                 android:layout_below="@+id/divider_line3"
                 android:layout_marginTop="20dp"
                 />
             <View
                 android:layout_width="match_parent"
                 android:layout_height="1dp"
                 android:layout_marginTop="20dp"
                 android:layout_below="@+id/profile_program"
                 android:background="@android:color/darker_gray"
                 android:id="@+id/divider_line4"/>

             <ImageView
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:id="@+id/ic_location"
                 android:background="@drawable/location_icon"
                 android:layout_below="@id/divider_line4"
                 android:layout_marginTop="20dp"
                 />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/profile_location"
                 android:layout_alignStart="@+id/ic_location"
                 android:hint="Loading"
                 android:layout_marginStart="50dp"
                 android:textSize="18sp"
                 android:layout_below="@+id/divider_line4"
                 android:layout_marginTop="20dp"
                 />


             <ProgressBar
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_centerVertical="true"
                 android:layout_centerHorizontal="true"
                 android:elevation="10dp"
                 android:visibility="gone"
                 android:id="@+id/progressBar_profile"/>



         </RelativeLayout>



     </LinearLayout>

</ScrollView>