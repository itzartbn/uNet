<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="0dp"
    tools:context=".SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_color_background"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >









            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_update_pp"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_baclground"
                android:layout_marginTop="200dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Profile Picture"
                android:textSize="22sp"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_update_email"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_baclground"
                android:layout_below="@id/settings_update_pp"
                android:layout_marginTop="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Update Email"
                android:textSize="22sp"
                android:textColor="@color/white"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_update_pw"
                style="@android:style/Widget.Button"
                android:background="@drawable/btn_baclground"
                android:layout_below="@id/settings_update_email"
                android:layout_marginTop="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Change Password"
                android:textSize="22sp"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/settings_logout"
                style="@android:style/Widget.Button"
                android:layout_below="@id/settings_update_pw"
                android:background="@drawable/btn_baclground"
                android:layout_marginTop="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Log Out"
                android:textSize="22sp"
                android:textColor="@color/white"
                />






        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
