<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:elevation="4dp"
            android:background="@color/white"
            app:titleMarginStart="0dp"
            app:titleMarginEnd="0dp"
            android:gravity="center"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp"
            android:background="@drawable/login_background">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signuptitle"
                android:text="Sign up"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="25dp"/>

            <TextView
                android:id="@+id/stud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signuptitle"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="(Teacher)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_below="@id/stud"
                android:background="#30ffffff"
                android:hint="Full Name"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_below="@id/name"
                android:background="#30ffffff"
                android:hint="E-mail"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:id="@+id/department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_margin="10dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/baseline_menu_book_24"
                android:drawablePadding="20dp"
                android:hint="Department"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_below="@id/department"
                android:background="#30ffffff"
                android:hint="Location"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:drawablePadding="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/locationbtn"
                android:text="Track Location"
                android:textColor="@color/black"
                android:layout_below="@id/location"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/white"
                android:textSize="15sp"
                android:paddingHorizontal="100dp"/>

            <EditText
                android:id="@+id/eid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:background="#30ffffff"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:drawablePadding="20dp"
                android:hint="TID"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:layout_below="@id/eid"
                android:background="#30ffffff"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_key_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repassword"
                android:layout_below="@id/password"
                android:background="#30ffffff"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_key_24"
                android:drawablePadding="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signupbtn"
                android:text="Sign up"
                android:textColor="@color/black"
                android:layout_below="@id/repassword"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/white"
                android:textSize="20sp"
                android:paddingHorizontal="120dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:visibility="gone"
                android:id="@+id/progressBar"/>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>
