<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherRegisterActivity"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_color_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_margin="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signuptitle"
                android:text="Sign up"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_margin="25dp"/>

            <TextView
                android:id="@+id/stud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/signuptitle"
                android:layout_margin="2dp"
                android:gravity="center"
                android:text="(Teacher)"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:layout_below="@id/stud"
                android:background="@drawable/pp_border"
                android:hint="Full Name"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_drive_file_rename_outline_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:layout_below="@id/name"
                android:background="@drawable/pp_border"
                android:hint="E-mail"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="20dp"/>

            <Spinner
                android:id="@+id/department_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email"
                android:layout_margin="10dp"
                android:background="@drawable/pp_border"
                android:padding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/location"
                android:layout_below="@id/department_spinner"
                android:background="@drawable/pp_border"
                android:hint="Location"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:drawablePadding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tecLocationbtn"
                android:text="Track Location"
                android:textColor="@color/white"
                android:layout_below="@id/location"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_baclground"
                android:textSize="15sp"
                android:paddingHorizontal="100dp"/>

            <EditText
                android:id="@+id/eid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/locationbtn"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/pp_border"
                android:drawableLeft="@drawable/baseline_person_outline_24"
                android:drawablePadding="20dp"
                android:hint="TID"
                android:padding="20dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:layout_below="@id/eid"
                android:background="@drawable/pp_border"
                android:hint="Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_key_24"
                android:drawablePadding="20dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/repassword"
                android:layout_below="@id/password"
                android:background="@drawable/pp_border"
                android:hint="Confirm Password"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/baseline_key_24"
                android:drawablePadding="20dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/signupbtn"
                android:text="Sign up"
                android:textColor="@color/white"
                android:layout_below="@id/repassword"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_baclground"
                android:textSize="20sp"
                android:paddingHorizontal="120dp"/>

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:elevation="10dp"
                android:visibility="gone"
                android:id="@+id/progressBar"/>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
