<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    android:background="@drawable/gradient_color_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_margin="15dp"
        >

        <TextView
            android:id="@+id/textView_updateProfile_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_profile_name"
            android:layout_below="@id/textView_updateProfile_head"
            android:text="Name"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_update_name"
            android:background="@drawable/pp_border"
            android:layout_below="@id/update_profile_name"
            android:inputType="textPersonName"
            android:padding="6sp"
            android:hint="Enter Full name"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_profile_program"
            android:layout_below="@id/editText_update_name"
            android:text="Department"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_update_program"
            android:background="@drawable/pp_border"
            android:layout_below="@id/update_profile_program"
            android:inputType="textPersonName"
            android:padding="6sp"
            android:hint="Enter the Department"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_profile_sid"
            android:layout_below="@id/editText_update_program"
            android:text="TID"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_update_sid"
            android:background="@drawable/pp_border"
            android:layout_below="@id/update_profile_sid"
            android:inputType="textPersonName"
            android:padding="6sp"
            android:hint="Enter your Teacher ID"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update_profile_location"
            android:layout_below="@id/editText_update_sid"
            android:text="Location"
            android:layout_marginTop="30dp"
            android:padding="6dp"
            android:textSize="16sp"
            android:textColor="#555555"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_update_location"
            android:background="@drawable/pp_border"
            android:layout_below="@id/update_profile_location"
            android:inputType="textPersonName"
            android:padding="6sp"
            android:hint="Enter your Location"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateProfile_map_button"
            style="@android:style/Widget.Button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/btn_baclground"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Track location"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/editText_update_location"
            />







        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updateProfile_btn"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="64dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:textStyle="bold"

            android:layout_margin="10dp"
            android:background="@drawable/btn_baclground"
            android:gravity="center"
            android:text="Update"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_below="@+id/updateProfile_map_button"
            />



        <ProgressBar
            android:id="@+id/progressBar_profile"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/indeterminate_circular_progress"
            android:elevation="10dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />




    </RelativeLayout>

</ScrollView>